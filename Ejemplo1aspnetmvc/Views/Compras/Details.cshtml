@model Ejemplo1aspnetmvc.Models.compra

@{
    ViewBag.Title = "Details";
    var nombreClienteCompra = Model.id_cliente;
  }

<h2>Detalles de la compra @nombreClienteCompra</h2>

<div>
    <h4>compra</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Fecha
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fecha)
        </dd>

        <dt>
            Total
        </dt>

        <dd>
            @Html.DisplayFor(model => model.total)
        </dd>

         <dt>
            Usuario
        </dt>

        <dd>
            @Ejemplo1aspnetmvc.Controllers.ComprasController.NombreUsuario(Model.id_usuario)
        </dd>

        <dt>
            Cliente
        </dt>

        <dd>
            @Ejemplo1aspnetmvc.Controllers.ComprasController.NombreCliente(Model.id_cliente)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar la compra " + @nombreClienteCompra, "Edit", new { id = Model.id }) |
    @Html.ActionLink("Regresar a la Lista", "Index")
</p>

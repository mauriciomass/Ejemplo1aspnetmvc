<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Dosis:wght@300&display=swap" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/custom.css">
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Sistema de Inventario", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                        <li>@Html.ActionLink("Acerca de", "Sobre mí", "Home")</li>
                        <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Iniciar Sesión", "Login", "Usuario")</li>
                    }

                    @if (User.Identity.IsAuthenticated)
                    {

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Menú CRUD Tablas <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="#">@Html.ActionLink("CRUD Usuario", "Index", "Usuario") </a></li>
                                <li><a href="#">@Html.ActionLink("CRUD Cliente", "Index", "Cliente") </a></li>
                                <li><a href="#">@Html.ActionLink("CRUD Compra", "Index", "Compras")</a></li>
                                <li><a href="#">@Html.ActionLink("CRUD Proveedor", "Index", "Proveedor")</a></li>
                                <li><a href="#">@Html.ActionLink("CRUD Producto", "Index", "Producto")</a></li>
                                <li><a href="#">@Html.ActionLink("CRUD Roles", "Index", "Roles") </a></li>
                                <li><a href="#">@Html.ActionLink("CRUD Usuario Rol", "Index", "UsuarioRol")</a></li>
                                <li><a href="#">@Html.ActionLink("CRUD Producto Compra", "Index", "ProductoCompra")</a></li>
                                <li><a href="#">@Html.ActionLink("CRUD Producto Imagen", "Index", "ProductoImagen")</a></li>
                            </ul>
                        </li>

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Subir Archivos <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="#">@Html.ActionLink("Subir Cliente", "uploadCSV", "Cliente") </a></li>
                                <li><a href="#">@Html.ActionLink("Subir Proveedor", "uploadCSV", "Proveedor") </a></li>
                            </ul>
                        </li>

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Reportes <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="#">@Html.ActionLink("Reporte Compra", "ReporteCompra", "Compras") </a></li>
                                <li><a href="#">@Html.ActionLink("Reporte Proveedor", "Reporte", "Producto") </a></li>
                            </ul>
                        </li>

                        <li>@Html.ActionLink("Cerrar Sesión", "CloseSession", "Usuario")</li>

                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            @*<p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>*@
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>



@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Iniciar Sesión</h2>

@{ if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-warning">@ViewBag.Message</div>
    }
}

<div class="form-horizontal">
    <form action="/Usuario/Login" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label class="control-label col-md-2">Correo</label>            
            <div class="col-md-10">
                
                    <input type="email" name="email" /> <span class="glyphicon glyphicon-envelope"></span>

                </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Contraseña</label>
            <div class="col-md-10">
                <input type="password" name="password" /> <span class="glyphicon glyphicon-check"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ingresar" class="btn btn-default" />
            </div>
        </div>

    </form>
</div>
